
sizes="10 20 40 80 160 320 640 1280 2560"
asizes="1 2 3 4 8 16"

timelimit=$1

allsizes() {
for i in $sizes
do for j in $asizes
do ./timeOut $timelimit ./Effect $1 -S${i} -W${j} >> effects/$2 || break
#  ./Tim $1 -S${i} -W${j} >> timings/$2
done
done
}
if test -d "effects" ; then rm effects/* ; else mkdir effects ; fi
allsizes -l promoted
allsizes -g Gruber-Gulan
allsizes -n normal
allsizes -f fused
allsizes -p pressed
allsizes -s stellar
allsizes -c semsearch
allsizes -y synsearch
allsizes -m museum
